<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <meta name="description" content="Assignment 2, CMPT 276"/>
    <meta name="author" content="Diljodh Nahal"/>

    <title>Rectangles | Assignment 2</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css"/>

    <!-- Custom Styles -->
    <link rel="stylesheet" href="/stylesheets/main.css" />

  </head>

  <body>
    <!-- Edit Modal -->
    <div class="modal" id="editModal" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Edit Rectangle</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form method="post" action="/update/<%= result.id %>">
              <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" required value="<%= result.name %>">
              </div>
              <div class="form-group">
                <label for="color">Color</label>
                <select class="form-control" id="color" name="color" required>
                  <option <% if (result.color === "red") { %> selected <% } %> value="red">Red</option>
                  <option <% if (result.color === "green") { %> selected <% } %> value="green">Green</option>
                  <option <% if (result.color === "yellow") { %> selected <% } %> value="yellow">Yellow</option>
                  <option <% if (result.color === "blue") { %> selected <% } %> value="blue">Blue</option>
                  <option <% if (result.color === "pink") { %> selected <% } %> value="pink">Pink</option>
                  <option <% if (result.color === "purple") { %> selected <% } %> value="purple">Purple</option>
                </select>
              </div>
              <div class="form-group">
                <label for="height">Height</label>
                <input type="number" class="form-control" id="height" name="height" min="50" max="500" required value="<%= result.height %>">
              </div>
              <div class="form-group">
                <label for="width">Width</label>
                <input type="number" class="form-control" id="width" name="width" min="50" max="500" required value="<%= result.width %>">
              </div>
              <button type="submit" class="btn btn-primary">Edit</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Delete Modal -->
    <div class="modal" id="deleteModal" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Delete Rectangle</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            Are you sure you want to delete this rectangle? This action is irreversible.
          </div>
          <div class="modal-footer">
            <form method="post" action="/delete/<%= result.id %>">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div id="headerContainer">
      <a href="/">< Go Back</a><br>
      <strong id="headerText">Rectangle Information</strong><br>
    </div>

    <div id="buttonContainer">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editModal">Edit Rectangle</button>
      <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete Rectangle</button>
    </div>

    <!-- Rectangle -->
    <div id="rectangle" style="height: <%= result.height %>px; width: <%= result.width %>px; background-color: <%= result.color %>">
      <div id="rectangleName"><%= result.name %></div>
    </div>

    <div id="tableContainer">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Color</th>
            <th scope="col">Height</th>
            <th scope="col">width</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= result.id %></td>
            <td><%= result.name %></td>
            <td><%= result.color %></td>
            <td><%= result.height %></td>
            <td><%= result.width %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- Bootstrap & JQuery -->
    <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>

  </body>

</html>